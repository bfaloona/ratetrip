.container-fluid
	.row.rate-trip-row.top-row
		.col-xs-3
			%span.logo.icon-stack.icon-lg
				%i.logo.icon.icon-comment-o.icon-stack-2x
				%i.logo.icon.icon-taxi.icon-stack-1x

		.col-xs-9
			.title=@title

	.container-fluid
		=form_tag url(:rating, :create), class: 'rating_form' do
			=hidden_field_tag :permit_number, value: @driver.permit_number
			.row.rate-trip-row.permit-number-row
				.col-xs-4
					.driver-photo
						=image_tag '/images/drivers/' + @driver.photo
				.col-xs-8
					.text-label.driver-name
						=@driver.name
					.text-label.permit-number
						=@driver.permit_number
			.row.rate-trip-row.rating-row
				.col-xs-12
					.stars
						<input name="quality" id="star-rating" type="number" class="rating" min="1" max="5" step="1" data-size="sm"
						data-symbol="&#xf00f;" data-glyphicon="false" data-rating-class="icon icon-star">

						%script{type: 'text/javascript'}
							$("#star-rating").rating({'size':'lg', 'showClear':'false', 'showCaption':'false'});

			.row.rate-trip-row.comment-row
				.col-xs-12
					= text_area_tag :comments, placeholder: 'Enter your comments about this trip', rows: 3
			.row.rate-trip-row.done-button-row
				.col-xs-12
					= submit_tag "Done"

			.row.rate-trip-row.footer-row
				.footer-title
					%a{href: 'http://taxitalk.info'} TaxiTalk.info
				.footer-subtitle
					promoting better taxis
