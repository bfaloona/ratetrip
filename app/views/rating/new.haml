.container-fluid
	.row.rate-row.top-row.gradient
		.col-xs-4
			%span.logo.icon-stack.icon-lg
				%i.logo.icon.icon-comment-o.icon-stack-2x
				%i.logo.icon.icon-taxi.icon-stack-1x

		.col-xs-8
			.title=@title

.container-fluid
	=form_tag url(:rating, :create), class: 'rating_form' do
		=hidden_field_tag :permit_number, value: @driver.permit_number
		.row.rate-row.first-row
			.col-xs-4.driver-photo
				=image_tag @driver.photo_path
			.col-xs-8
				.text-label.driver-name
					=@driver.name
				.text-label.permit-number
					=@driver.permit_number
				.detail
					SFMTA
		.row.rate-row.rating-row
			.col-xs-12
				.stars
					%input.input-with-feedback{name: "quality", id: "star-rating", type: "number", class: "rating", 'data-min': 0,
					 'data-max': 5, 'data-step': 1, 'data-stars': 5, 'data-size': "lg", 'data-show-clear': 'false',
					 'data-show-caption': "false", 'data-symbol': "&#xf00f;".html_safe, 'data-glyphicon': "false", 'data-rating-class': "icon icon-star"}

					%script{type: 'text/javascript'}
						$("#star-rating").rating({});

		.row.rate-row.comment-row
			.col-xs-12
				= text_area_tag :comments, placeholder: 'Comments (optional)', rows: 3
		.row.rate-row.done-button-row
			.col-xs-12
				%input.btn.btn-primary{type: :submit, value: 'Done'}
				%span.timestamp
				%span.detail=Time.now.in_time_zone("Pacific Time (US & Canada)").strftime('%b %e, %l:%M %p')

%footer
	.container-fluid.footer.footer-row.gradient
		.footer-subtitle
			promoting better taxis
		.footer-title
			%a{href: 'http://taxitalk.info'}
				TaxiTalk.info
			\/ RateThisRide.us
